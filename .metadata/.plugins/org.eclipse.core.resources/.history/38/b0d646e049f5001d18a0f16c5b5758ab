package utils;

import javax.servlet.jsp.JspWriter;

public class JSFunction {
	
	public static void alertLocation(String msg, String url,  JspWriter out) {
		try {
			String script = ""
					+ "<script>"
					+"alert('"+msg+"');"
					+" location.href='"+url+"';"
					+"</scriipt>";
			out.println(script);
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
	}
	
	public static void alertLocation(String msg,  JspWriter out) {
		try {
			String script = ""
					+ "<script>"
					+"alert('"+msg+"');"
					+"history.back();"
					+"</scriipt>";
			out.println(script);
			
		} catch (Exception e) {
			// TODO: handle exception
		}
	}

}
